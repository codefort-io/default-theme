{% extends 'layout/theme' %}

{% block content %}
<section class="container mx-auto max-w-3xl px-4 py-8">
    <h1 class="text-3xl md:text-4xl font-bold text-center">
        {{ blog.title }}
    </h1>
</section>
<div class="bg-gray-300 h-px"></div>
<section class="container mx-auto px-2 md:px-0 py-4 flex flex-wrap">
	{% for article in blog.articles | limit: 3%}
	<div class="w-full md:w-1/3 p-2 md:p-4">
    	<a href="{% if blog.handle == 'blog' %}/blog/{{ article.handle }}{% else %}{{ article.url }}{% endif %}" class="block mb-8 md:mb-0">
            <div class="bg-cover bg-bottom" style="padding-top: 100%; background-image: url({{ article.image | replace: 'cdn.', 'files.' }}?width=790)"></div>
            <h4 class="mt-4 text-lg font-bold">
				{{ article.title }}
            </h4>
            <p class="mt-2 text-gray-800">
            	{{ article.excerpt }}
            </p>
        </a>
    </div>
    {% endfor %}
</section>
{% endblock %}